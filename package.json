{
  "name": "keyword-tool",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "npx ts-node tests/run-tests.ts",
    "test:unit": "npx ts-node tests/run-tests.ts -- --unit",
    "test:integration": "npx ts-node tests/run-tests.ts -- --integration",
    "test:component": "npx ts-node tests/run-tests.ts -- --component",
    "test:e2e": "npx ts-node tests/run-tests.ts -- --e2e",
    "test:performance": "npx ts-node tests/run-tests.ts -- --performance",
    "test:all": "npx ts-node tests/run-tests.ts -- --all",
    "test:watch": "npx ts-node tests/run-tests.ts -- --watch",
    "test:coverage": "npx ts-node tests/run-tests.ts -- --coverage",
    "test:ci": "npx ts-node tests/run-tests.ts -- --all --coverage --bail",
    "test:parallel": "npx ts-node tests/run-tests.ts -- --parallel",
    "test:verbose": "npx ts-node tests/run-tests.ts -- --verbose",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:coverage": "jest --coverage",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:headed": "playwright test --headed",
    "test:scraping": "jest --testPathPattern=scraping",
    "demo:scraping": "npx ts-node scripts/demo-scraping.ts",
    "build:analyze": "ANALYZE=true npm run build",
    "build:production": "NODE_ENV=production npm run build",
    "build:staging": "NODE_ENV=staging npm run build",
    "deploy:production": "./scripts/deploy-vercel.sh production",
    "deploy:staging": "./scripts/deploy-vercel.sh staging",
    "deploy:preview": "./scripts/deploy-vercel.sh preview",
    "health:check": "curl -f http://localhost:3000/api/health || curl -f https://dream100.ollisocial.com/api/health",
    "vercel:pull": "vercel pull --environment=production",
    "vercel:env": "vercel env ls",
    "vercel:logs": "vercel logs --follow",
    "cleanup:deps": "npm prune && npm audit fix",
    "cleanup:cache": "rm -rf .next node_modules/.cache",
    "cleanup:test": "rm -rf test-results coverage .nyc_output",
    "precommit": "npm run lint && npm run type-check && npm run test:unit",
    "prebuild": "npm run lint && npm run type-check",
    "postinstall": "playwright install --with-deps"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.59.0",
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@sentry/nextjs": "^10.5.0",
    "@supabase/supabase-js": "^2.55.0",
    "axios": "^1.11.0",
    "bullmq": "^5.56.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "ioredis": "^5.7.0",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "openai": "^5.12.2",
    "papaparse": "^5.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.48.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.10",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "msw": "^2.7.0",
    "prisma": "^6.14.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "jest": {
    "preset": "next/jest",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testEnvironment": "jest-environment-jsdom",
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{js,jsx,ts,tsx}",
      "!src/**/index.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}